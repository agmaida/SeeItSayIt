<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrew.seeitsayit.HomePage"
    android:clickable="false">

    <!--Create Ticket Button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Ticket"
        android:id="@+id/homeCreateTicket"
        android:layout_above="@+id/homeViewTickets"
        android:layout_alignRight="@+id/homeViewTickets"
        android:layout_alignEnd="@+id/homeViewTickets"
        android:layout_alignLeft="@+id/homeViewTickets"
        android:layout_alignStart="@+id/homeViewTickets"
        android:clickable="true"
        android:onClick="toCreateTicketFromHome"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <!--View tickets button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View List of Tickets"
        android:id="@+id/homeViewTickets"
        android:clickable="true"
        android:onClick="toTicketListFromHome"
        android:layout_above="@+id/homeViewMap"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <!--view map button-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Map"
        android:id="@+id/homeViewMap"
        android:clickable="true"
        android:onClick="toMapFromHome"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/homeViewTickets"
        android:layout_alignStart="@+id/homeViewTickets"
        android:layout_alignRight="@+id/homeViewTickets"
        android:layout_alignEnd="@+id/homeViewTickets" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/logosignin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />
</RelativeLayout>
